<UserControl x:Class="SekiroTool.Views.Tabs.TargetTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:converters="clr-namespace:SekiroTool.Converters"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanAndConverter x:Key="BooleanAndConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <converters:ImmuneFillConverter x:Key="ImmuneFillConverter" />
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                BorderThickness="1"
                BorderBrush="#333"
                CornerRadius="3"
                Margin="0,0,0,5">
            <StackPanel Margin="5">
                <TextBlock Text="Target Controls"
                           FontWeight="Bold"
                           Margin="0,0,0,5" />

                <CheckBox Content="Enable Target Options"
                          IsChecked="{Binding IsTargetOptionsEnabled}"
                          Margin="0,0,0,0" />

                <StackPanel Visibility="{Binding IsTargetOptionsEnabled, Converter={StaticResource BoolToVis}}">

                    <Grid HorizontalAlignment="Stretch">
                        <TextBlock HorizontalAlignment="Center" Margin="0,0,0,5">
                            <Run Text="Health: " />
                            <Run Text="{Binding TargetCurrentHealth, Mode=OneWay}" />
                            <Run Text="/" />
                            <Run Text="{Binding TargetMaxHealth, Mode=OneWay}" />
                        </TextBlock>

                        <xctk:IntegerUpDown Width="80" Margin="5,2"
                                            HorizontalAlignment="Right"
                                            Value="{Binding CustomHp}"
                                            Minimum="0" />
                    </Grid>


                    <Grid HorizontalAlignment="Stretch">
                        <ProgressBar Width="250" Height="20" HorizontalAlignment="Center"
                                     Value="{Binding TargetCurrentHealth}"
                                     Maximum="{Binding TargetMaxHealth, FallbackValue=100}"
                                     Margin="0,0,0,5">
                            <ProgressBar.Template>
                                <ControlTemplate TargetType="ProgressBar">
                                    <Border BorderBrush="#444444" BorderThickness="1" Background="#222222"
                                            CornerRadius="3">
                                        <Grid x:Name="PART_Track">
                                            <Rectangle x:Name="PART_Indicator"
                                                       Fill="#4CAF50"
                                                       HorizontalAlignment="Left"
                                                       RadiusX="2" RadiusY="2"
                                                       Margin="1" />
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </ProgressBar.Template>
                        </ProgressBar>
                        <Button Content="Set Hp"
                                Margin="0,3,10,0"
                                HorizontalAlignment="Right"
                                Command="{Binding SetCustomHpCommand}">
                            <Button.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="IsValidTarget" />
                                </MultiBinding>
                            </Button.IsEnabled>
                        </Button>
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <UniformGrid Grid.Column="0" Rows="1" Columns="5">
                            <Button Content="1 HP" Margin="1"
                                    Command="{Binding SetHpCommand}"
                                    CommandParameter="1">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsValidTarget" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>
                            <Button Content="25%" Margin="1"
                                    Command="{Binding SetHpPercentageCommand}"
                                    CommandParameter="25">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsValidTarget" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>
                            <Button Content="50%" Margin="1"
                                    Command="{Binding SetHpPercentageCommand}"
                                    CommandParameter="50">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsValidTarget" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>
                            <Button Content="75%" Margin="1"
                                    Command="{Binding SetHpPercentageCommand}"
                                    CommandParameter="75">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsValidTarget" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>
                            <Button Content="100%" Margin="1"
                                    Command="{Binding SetHpPercentageCommand}"
                                    CommandParameter="100">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsValidTarget" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>
                        </UniformGrid>

                        <CheckBox Grid.Column="1" Content="Freeze Health" Margin="10,0,0,0"
                                  IsChecked="{Binding IsFreezeHealthEnabled}">
                            <CheckBox.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="IsValidTarget" />
                                </MultiBinding>
                            </CheckBox.IsEnabled>
                        </CheckBox>
                    </Grid>

                    <Grid HorizontalAlignment="Stretch">
                        <TextBlock HorizontalAlignment="Center" Margin="0,0,0,5">
                            <Run Text="Posture: " />
                            <Run Text="{Binding TargetCurrentPosture, Mode=OneWay}" />
                            <Run Text="/" />
                            <Run Text="{Binding TargetMaxPosture, Mode=OneWay}" />
                        </TextBlock>
                        <xctk:IntegerUpDown Width="80" Margin="5,2"
                                            HorizontalAlignment="Right"
                                            Value="{Binding CustomPosture}"
                                            Minimum="0" />
                    </Grid>

                    <Grid HorizontalAlignment="Stretch">
                        <ProgressBar Width="250" Height="20" HorizontalAlignment="Center"
                                     Value="{Binding TargetCurrentPosture}"
                                     Maximum="{Binding TargetMaxPosture, FallbackValue=100}"
                                     Margin="0,0,0,5">
                            <ProgressBar.Template>
                                <ControlTemplate TargetType="ProgressBar">
                                    <Border BorderBrush="#444444" BorderThickness="1" Background="#222222"
                                            CornerRadius="3">
                                        <Grid x:Name="PART_Track">
                                            <Rectangle x:Name="PART_Indicator"
                                                       Fill="#CC9900"
                                                       HorizontalAlignment="Left"
                                                       RadiusX="2" RadiusY="2"
                                                       Margin="1" />
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </ProgressBar.Template>
                        </ProgressBar>

                        <Button Content="Set Posture"
                                Margin="0,3,10,0"
                                HorizontalAlignment="Right"
                                Command="{Binding SetCustomPostureCommand}">
                            <Button.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="IsValidTarget" />
                                </MultiBinding>
                            </Button.IsEnabled>
                        </Button>
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <UniformGrid Grid.Column="0" Rows="1" Columns="5">
                            <Button Content="1 Posture" Margin="1"
                                    Command="{Binding SetPostureCommand}"
                                    CommandParameter="1">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsValidTarget" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>
                            <Button Content="25%" Margin="1"
                                    Command="{Binding SetPosturePercentageCommand}"
                                    CommandParameter="25">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsValidTarget" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>
                            <Button Content="50%" Margin="1"
                                    Command="{Binding SetPosturePercentageCommand}"
                                    CommandParameter="50">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsValidTarget" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>
                            <Button Content="75%" Margin="1"
                                    Command="{Binding SetPosturePercentageCommand}"
                                    CommandParameter="75">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsValidTarget" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>
                            <Button Content="100%" Margin="1"
                                    Command="{Binding SetPosturePercentageCommand}"
                                    CommandParameter="100">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsValidTarget" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>
                        </UniformGrid>

                        <CheckBox Grid.Column="1" Content="Freeze Posture" Margin="10,0,0,0"
                                  IsChecked="{Binding IsFreezePostureEnabled}">
                            <CheckBox.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="IsValidTarget" />
                                </MultiBinding>
                            </CheckBox.IsEnabled>
                        </CheckBox>
                    </Grid>
                    <Grid Margin="0,5,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Show:" Margin="0,0,0,5" />

                        <StackPanel Grid.Row="0" HorizontalAlignment="Right" Orientation="Horizontal">
                            <!-- <CheckBox Content="Pop out Resistances" -->
                            <!--           IsEnabled="{Binding IsTargetOptionsEnabled}" -->
                            <!--           IsChecked="{Binding IsResistancesWindowOpen}" -->
                            <!--           Margin="0,2" /> -->
                            <!-- -->
                            <!-- <Border -->
                            <!--     Background="#3498db" -->
                            <!--     CornerRadius="10" -->
                            <!--     Width="12" -->
                            <!--     Height="12" -->
                            <!--     Margin="5,0,0,0" -->
                            <!--     VerticalAlignment="Center" -->
                            <!--     ToolTip="Will only stay on top of game in windowed mode" -->
                            <!--     ToolTipService.InitialShowDelay='100'> -->
                            <!--     <TextBlock Text="i" -->
                            <!--                Foreground="White" -->
                            <!--                HorizontalAlignment="Center" -->
                            <!--                VerticalAlignment="Center" -->
                            <!--                FontWeight="Bold" -->
                            <!--                FontSize="10" /> -->
                            <!-- </Border> -->
                        </StackPanel>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,5,10,0">
                                <CheckBox Content="Poise" Margin="0,5"
                                          IsChecked="{Binding ShowPoise, FallbackValue=False}" />
                                <CheckBox Content="Poison" Margin="0,5"
                                          IsChecked="{Binding ShowPoison, FallbackValue=False}" />
                                <CheckBox Content="Burn" Margin="0,5"
                                          IsChecked="{Binding ShowBurn, FallbackValue=False}" />
                                <CheckBox Content="Shock" Margin="0,5"
                                          IsChecked="{Binding ShowShock, FallbackValue=False}" />
                                <CheckBox Content="Show All" Margin="0,5"
                                          IsChecked="{Binding ShowAllResistances, FallbackValue=False}" />
                            </StackPanel>

                            <Grid Grid.Column="1" Margin="0,10,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0"
                                            Visibility="{Binding ShowPoise, Converter={StaticResource BoolToVis}, FallbackValue=Visible}"
                                            Margin="0,0,0,5">
                                    <ProgressBar Height="25"
                                                 Width="250"
                                                 Value="{Binding TargetCurrentPoise}"
                                                 Maximum="{Binding TargetMaxPoise, FallbackValue=100}">
                                        <ProgressBar.Template>
                                            <ControlTemplate TargetType="ProgressBar">
                                                <Border BorderBrush="#444444" BorderThickness="1" Background="#222222"
                                                        CornerRadius="3">
                                                    <Grid x:Name="PART_Track">
                                                        <Rectangle x:Name="PART_Indicator"
                                                                   Fill="#4CAF50"
                                                                   HorizontalAlignment="Left"
                                                                   RadiusX="2" RadiusY="2"
                                                                   Margin="1" />
                                                        <TextBlock HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="White" FontWeight="SemiBold">
                                                            <Run
                                                                Text="{Binding TargetCurrentPoise, StringFormat={}{0:F1}, Mode=OneWay}" />
                                                            <Run Text="/" />
                                                            <Run
                                                                Text="{Binding TargetMaxPoise, StringFormat={}{0:F1}, Mode=OneWay}" />
                                                        </TextBlock>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </ProgressBar.Template>
                                    </ProgressBar>
                                    <TextBlock
                                        Text="{Binding TargetPoiseTimer, StringFormat={}Poise: {0:F1}s, Mode=OneWay}"
                                        HorizontalAlignment="Center" Margin="0,2,0,0" />
                                </StackPanel>

                                <Grid Grid.Row="1" Grid.RowSpan="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0"
                                                Visibility="{Binding ShowPoison, Converter={StaticResource BoolToVis}, FallbackValue=Visible}"
                                                Margin="0,0,5,5">
                                        <Grid>
                                            <ProgressBar Height="25"
                                                         Value="{Binding TargetCurrentPoison}"
                                                         Maximum="{Binding TargetMaxPoison, FallbackValue=100}">
                                                <ProgressBar.Template>
                                                    <ControlTemplate TargetType="ProgressBar">
                                                        <Border BorderBrush="#444444" BorderThickness="1"
                                                                Background="#222222"
                                                                CornerRadius="3">
                                                            <Grid x:Name="PART_Track">
                                                                <Rectangle x:Name="PART_Indicator"
                                                                           Fill="#7B1FA2"
                                                                           HorizontalAlignment="Left"
                                                                           RadiusX="2" RadiusY="2"
                                                                           Margin="1" />
                                                            </Grid>
                                                        </Border>
                                                    </ControlTemplate>
                                                </ProgressBar.Template>
                                            </ProgressBar>

                                        </Grid>
                                        <TextBlock HorizontalAlignment="Center" Margin="0,2,0,0">
                                            <Run Text="Poison " />
                                            <Run Text="{Binding TargetCurrentPoison, Mode=OneWay}" />
                                            <Run Text="/" />
                                            <Run Text="{Binding TargetMaxPoison, Mode=OneWay}" />
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Grid.Row="0" Grid.Column="1"
                                                Visibility="{Binding ShowBurn, Converter={StaticResource BoolToVis}, FallbackValue=Visible}"
                                                Margin="5,0,0,5">
                                        <Grid>
                                            <ProgressBar Height="25"
                                                         Value="{Binding TargetCurrentBurn}"
                                                         Maximum="{Binding TargetMaxBurn, FallbackValue=100}">
                                                <ProgressBar.Template>
                                                    <ControlTemplate TargetType="ProgressBar">
                                                        <Border BorderBrush="#444444" BorderThickness="1"
                                                                Background="#222222"
                                                                CornerRadius="3">
                                                            <Grid x:Name="PART_Track">
                                                                <Rectangle x:Name="PART_Indicator"
                                                                           Fill="#ff4000"
                                                                           HorizontalAlignment="Left"
                                                                           RadiusX="2" RadiusY="2"
                                                                           Margin="1" />
                                                            </Grid>
                                                        </Border>
                                                    </ControlTemplate>
                                                </ProgressBar.Template>
                                            </ProgressBar>
                                        </Grid>
                                        <TextBlock HorizontalAlignment="Center" Margin="0,2,0,0">
                                            <Run Text="Burn " />
                                            <Run Text="{Binding TargetCurrentBurn, Mode=OneWay}" />
                                            <Run Text="/" />
                                            <Run Text="{Binding TargetMaxBurn, Mode=OneWay}" />
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="0"
                                                Visibility="{Binding ShowShock, Converter={StaticResource BoolToVis}, FallbackValue=Visible}"
                                                Margin="0,5,5,0">
                                        <Grid>
                                            <ProgressBar Height="25"
                                                         Value="{Binding TargetCurrentShock}"
                                                         Maximum="{Binding TargetMaxShock, FallbackValue=100}">
                                                <ProgressBar.Template>
                                                    <ControlTemplate TargetType="ProgressBar">
                                                        <Border BorderBrush="#444444" BorderThickness="1"
                                                                Background="#222222"
                                                                CornerRadius="3">
                                                            <Grid x:Name="PART_Track">
                                                                <Rectangle x:Name="PART_Indicator"
                                                                           Fill="#86b9b0"
                                                                           HorizontalAlignment="Left"
                                                                           RadiusX="2" RadiusY="2"
                                                                           Margin="1" />
                                                            </Grid>
                                                        </Border>
                                                    </ControlTemplate>
                                                </ProgressBar.Template>
                                            </ProgressBar>
                                        </Grid>
                                        <TextBlock HorizontalAlignment="Center" Margin="0,2,0,0">
                                            <Run Text="Shock " />
                                            <Run Text="{Binding TargetCurrentShock, Mode=OneWay}" />
                                            <Run Text="/" />
                                            <Run Text="{Binding TargetMaxShock, Mode=OneWay}" />
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <CheckBox x:Name="RepeatActCheckbox" Content="Repeat Last Act" Margin="10,0,0,0">
                            <CheckBox.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="IsValidTarget" />
                                </MultiBinding>
                            </CheckBox.IsEnabled>
                            <CheckBox.IsChecked>
                                <Binding Path="IsRepeatActEnabled" />
                            </CheckBox.IsChecked>
                        </CheckBox>
                        <TextBlock Text="Last Act: " Margin="10,0,0,0" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding LastAct}" VerticalAlignment="Center" Width="20" TextAlignment="Right" />

                        <TextBlock Text="Force Act: " Margin="10,0,10,0" VerticalAlignment="Center" />
                        <xctk:IntegerUpDown Width="50" Height="20"
                                            Value="{Binding ForceAct, UpdateSourceTrigger=PropertyChanged}"
                                            Minimum="0"
                                            Maximum="255"
                                            VerticalAlignment="Center">
                            <xctk:IntegerUpDown.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="IsValidTarget" />
                                </MultiBinding>
                            </xctk:IntegerUpDown.IsEnabled>
                        </xctk:IntegerUpDown>
                        <Border
                            Background="#3498db"
                            CornerRadius="10"
                            Width="12"
                            Height="12"
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            ToolTip="Force Act:&#x0A;• Enter 0 for normal behavior&#x0A;• Enter a number to repeat a specific action&#x0A;• Numbers exceeding available acts will be ignored"
                            ToolTipService.InitialShowDelay='100'>
                            <TextBlock Text="i"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       FontSize="10" />
                        </Border>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <CheckBox x:Name="RepeatKengekiActCheckbox" Content="Repeat Last Kengeki Act" Margin="10,0,0,0">
                            <CheckBox.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="IsValidTarget" />
                                </MultiBinding>
                            </CheckBox.IsEnabled>
                            <CheckBox.IsChecked>
                                <Binding Path="IsRepeatKengekiActEnabled" />
                            </CheckBox.IsChecked>
                        </CheckBox>
                        <TextBlock Text="Last Kengeki Act: " Margin="10,0,0,0" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding LastKengekiAct}" VerticalAlignment="Center" Width="20"
                                   TextAlignment="Right" />


                        <TextBlock Text="Force Kengeki Act: " Margin="10,0,10,0" VerticalAlignment="Center" />
                        <xctk:IntegerUpDown Width="50" Height="20"

                                            Value="{Binding ForceKengekiAct, UpdateSourceTrigger=PropertyChanged}"
                                            Minimum="0"
                                            Maximum="255"
                                            VerticalAlignment="Center">
                            <xctk:IntegerUpDown.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="IsValidTarget" />
                                </MultiBinding>
                            </xctk:IntegerUpDown.IsEnabled>
                        </xctk:IntegerUpDown>
                        <Border
                            Background="#3498db"
                            CornerRadius="10"
                            Width="12"
                            Height="12"
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            ToolTip="Kengeki Act: The counter attack after a deflect/block"
                    
                            ToolTipService.InitialShowDelay='100'>
                            <TextBlock Text="i"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       FontSize="10" />
                        </Border>
                    </StackPanel>
                    
                    
                    
                    <Grid Margin="0,10,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Speed Modifier:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0" />

                        <xctk:DoubleUpDown Grid.Row="0" x:Name="SpeedUpDown" Grid.Column="1"
                                           Value="{Binding TargetSpeed}"
                                           FormatString="F2"
                                           Minimum="0"
                                           Maximum="5"
                                           Increment="0.50"
                                           Width="100"

                                           HorizontalAlignment="Left">
                            <xctk:DoubleUpDown.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="IsValidTarget" />
                                </MultiBinding>
                            </xctk:DoubleUpDown.IsEnabled>
                        </xctk:DoubleUpDown>

                        <CheckBox Grid.Row="1" Grid.Column="0" Content="Freeze Ai" Margin="10,10,0,0">
                            <CheckBox.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="IsValidTarget" />
                                </MultiBinding>
                            </CheckBox.IsEnabled>
                            <CheckBox.IsChecked>
                                <Binding Path="IsAiFreezeEnabled" />
                            </CheckBox.IsChecked>
                        </CheckBox>

                        <CheckBox Grid.Row="1" Grid.Column="1" Content="No Posture Buildup" Margin="10,10,0,0">
                            <CheckBox.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="IsValidTarget" />
                                </MultiBinding>
                            </CheckBox.IsEnabled>
                            <CheckBox.IsChecked>
                                <Binding Path="IsNoPostureBuildupEnabled" />
                            </CheckBox.IsChecked>
                        </CheckBox>
                        <CheckBox Grid.Row="2" Grid.Column="0" Content="No Attack" Margin="10,5,0,0">
                            <CheckBox.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="IsValidTarget" />
                                </MultiBinding>
                            </CheckBox.IsEnabled>
                            <CheckBox.IsChecked>
                                <Binding Path="IsNoAttackEnabled" />
                            </CheckBox.IsChecked>
                        </CheckBox>

                        <CheckBox Grid.Row="2" Grid.Column="1" Content="No Death" Margin="10,5,0,0">
                            <CheckBox.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="IsValidTarget" />
                                </MultiBinding>
                            </CheckBox.IsEnabled>
                            <CheckBox.IsChecked>
                                <Binding Path="IsNoDeathEnabled" />
                            </CheckBox.IsChecked>
                        </CheckBox>
                        <CheckBox Grid.Row="3" Grid.Column="0" Content="No Move" Margin="10,5,0,0">
                            <CheckBox.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="IsValidTarget" />
                                </MultiBinding>
                            </CheckBox.IsEnabled>
                            <CheckBox.IsChecked>
                                <Binding Path="IsNoMoveEnabled" />
                            </CheckBox.IsChecked>
                        </CheckBox>

                        <CheckBox Grid.Row="3" Grid.Column="1" Content="Target View" Margin="10,5,0,0">
                            <CheckBox.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="IsValidTarget" />
                                </MultiBinding>
                            </CheckBox.IsEnabled>
                            <CheckBox.IsChecked>
                                <Binding Path="IsTargetViewEnabled" />
                            </CheckBox.IsChecked>
                        </CheckBox>

                    </Grid>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>