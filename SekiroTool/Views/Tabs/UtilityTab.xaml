<UserControl x:Class="SekiroTool.Views.Tabs.UtilityTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SekiroTool.Views.Tabs"
             xmlns:converters="clr-namespace:SekiroTool.Converters"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <converters:BooleanAndConverter x:Key="BooleanAndConverter" />

    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                BorderThickness="1"
                BorderBrush="#333"
                CornerRadius="3"
                Margin="0,0,0,5">
            <StackPanel Margin="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Draw"
                               Grid.Column="0" />
                </Grid>

                <Grid Margin="20,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />

                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>


                    <CheckBox Content="Hitbox View"
                              IsChecked="{Binding IsHitboxEnabled}"
                              Grid.Column="0" Grid.Row="0"
                              Margin="0,2" />

                    <CheckBox Content="Player Sound View"
                              IsChecked="{Binding IsSoundViewEnabled}"
                              Grid.Column="0" Grid.Row="1"
                              Margin="0,2" />

                    <CheckBox Content="Draw Events"
                              IsChecked="{Binding IsDrawEventEnabled}"
                              Grid.Column="0" Grid.Row="2"
                              Margin="0,2" />

                    <CheckBox Content="Enemy Targeting View"
                              IsChecked="{Binding IsTargetingViewEnabled}"
                              Grid.Column="0" Grid.Row="3"
                              Margin="0,2" />


                    <CheckBox Content="Hide Map"
                              IsChecked="{Binding IsHideMapEnabled}"
                              Grid.Column="1" Grid.Row="0"
                              Margin="0,2" />

                    <CheckBox Content="Hide Objects"
                              IsChecked="{Binding IsHideObjectsEnabled}"
                              Grid.Column="1" Grid.Row="1"
                              Margin="0,2" />

                    <CheckBox Content="Hide Characters"
                              IsChecked="{Binding IsHideCharactersEnabled}"
                              Grid.Column="1" Grid.Row="2"
                              Margin="0,2" />

                    <CheckBox Content="Hide Sfx"
                              IsChecked="{Binding IsHideSfxEnabled}"
                              Grid.Column="1" Grid.Row="3"
                              Margin="0,2" />

                    <CheckBox Content="Collision Mesh 1"
                              IsChecked="{Binding IsDrawLowHitEnabled}"
                              Grid.Column="2" Grid.Row="0"
                              Margin="0,2" />

                    <CheckBox Content="Collision Mesh 2"
                              IsChecked="{Binding IsDrawHighHitEnabled}"
                              Grid.Column="2" Grid.Row="1"
                              Margin="0,2" />

                    <CheckBox Content="Character Mesh"
                              IsChecked="{Binding IsDrawChrRagdollEnabled}"
                              Grid.Column="2" Grid.Row="2"
                              Margin="0,2" />
                </Grid>
            </StackPanel>
        </Border>

        <Border Grid.Row="1"
                BorderThickness="1"
                BorderBrush="#333"
                CornerRadius="3"
                Margin="0,0,0,5">

            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,3" VerticalAlignment="Center">
                    <CheckBox Content="100% Drop"
                              IsChecked="{Binding Is100DropEnabled}"
                              VerticalAlignment="Center"
                              Margin="0,0,20,0" />
                    <Button Content="Break Objects"

                            IsEnabled="{Binding AreButtonsEnabled}"
                            Padding="5,3"
                            Margin="0,0,20,0" />
                    <Button Content="Restore Objects"

                            IsEnabled="{Binding AreButtonsEnabled}"
                            Padding="5,3"
                            Margin="0,0,20,0" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                    <xctk:DoubleUpDown x:Name="SpeedUpDown"
                                       Value="{Binding GameSpeed}"
                                       TextAlignment="Center"
                                       Width="80"
                                       Minimum="0"
                                       Maximum="10"
                                       Increment="0.50"
                                       FormatString="F2"
                                       IsEnabled="{Binding AreButtonsEnabled}"
                                       BorderBrush="#3F3F46" />
                    <TextBlock Text="Game Speed" VerticalAlignment="Center" Margin="10,0,0,0" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                    <CheckBox Content="Unlock Fps"
                              IsChecked="{Binding IsDbgFpsEnabled}"
                              VerticalAlignment="Center"
                              Margin="0,0,20,0" />
                    <xctk:DoubleUpDown x:Name="FpsUpDown"
                                       Value="{Binding Fps}"
                                       TextAlignment="Center"
                                       Width="80"
                                       Minimum="5"
                                       Maximum="140"
                                       Increment="1"
                                       FormatString="F0"
                                       IsEnabled="{Binding IsDbgFpsEnabled}"
                                       BorderBrush="#3F3F46" />
                </StackPanel>
            </StackPanel>

        </Border>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    BorderThickness="1"
                    BorderBrush="#333"
                    CornerRadius="3"
                    Margin="0,0,5,0">
                <StackPanel Margin="10">
                    <TextBlock Text="Menu"
                               FontWeight="Bold"
                               Margin="0,0,0,10" />

                    <WrapPanel HorizontalAlignment="Center">
                        <Button Content="Skills"
                                IsEnabled="{Binding AreButtonsEnabled}"
                                Command="{Binding OpenSkillsCommand}"
                                Width="80"
                                Height="24"
                                Margin="3" />

                        <Button Content="Upgrade Prosthetics"
                                IsEnabled="{Binding AreButtonsEnabled}"
                                Command="{Binding OpenUpgradeProstheticsCommand}"
                                Width="80"
                                Height="24"
                                Margin="3" />

                        <!-- <Button Content="Upgrade" -->
                        <!--         IsEnabled="{Binding AreButtonsEnabled}" -->
                        <!-- -->
                        <!--         Height="24" -->
                        <!--         Width="80" -->
                        <!--         Margin="3" /> -->
                        <!-- -->
                        <!-- <Button Content="Repair" -->
                        <!--         IsEnabled="{Binding AreButtonsEnabled}" -->
                        <!-- -->
                        <!--         Height="24" -->
                        <!--         Width="80" -->
                        <!--         Margin="3" /> -->
                        <!-- -->
                        <!-- <Button Content="Infuse" -->
                        <!--         IsEnabled="{Binding AreButtonsEnabled}" -->
                        <!-- -->
                        <!--         Height="24" -->
                        <!--         Width="80" -->
                        <!--         Margin="3" /> -->
                        <!-- -->
                        <!-- <Button Content="Allot Estus" -->
                        <!--         IsEnabled="{Binding AreButtonsEnabled}" -->
                        <!--         Height="24" -->
                        <!-- -->
                        <!--         Width="80" -->
                        <!--         Margin="3" /> -->
                        <!-- -->
                        <!-- <Button Content="Attunement" -->
                        <!--         IsEnabled="{Binding AreButtonsEnabled}" -->
                        <!--         Height="24" -->
                        <!--         Width="80" -->
                        <!--         Margin="3" /> -->
                    </WrapPanel>
                </StackPanel>
            </Border>

            <Border Grid.Column="1"
                    BorderThickness="1"
                    BorderBrush="#333"
                    CornerRadius="3"
                    Margin="5,0,0,0">
                <StackPanel Margin="10">
                    <TextBlock Text="Shops"
                               FontWeight="Bold"
                               Margin="0,0,0,10" />

                    <WrapPanel HorizontalAlignment="Center">
                        <Button Content="Handmaid"
                                IsEnabled="{Binding AreButtonsEnabled}"

                                Height="24"
                                Width="80"
                                Margin="3" />

                        <Button Content="Greirat"
                                IsEnabled="{Binding AreButtonsEnabled}"

                                Height="24"
                                Width="80"
                                Margin="3" />

                        <Button Content="Patches"
                                IsEnabled="{Binding AreButtonsEnabled}"

                                Height="24"
                                Width="80"
                                Margin="3" />

                        <Button Content="Orbeck"
                                IsEnabled="{Binding AreButtonsEnabled}"

                                Height="24"
                                Width="80"
                                Margin="3" />

                        <Button Content="Cornyx"
                                IsEnabled="{Binding AreButtonsEnabled}"

                                Height="24"
                                Width="80"
                                Margin="3" />

                        <Button Content="Karla"
                                IsEnabled="{Binding AreButtonsEnabled}"

                                Height="24"
                                Width="80"
                                Margin="3" />

                        <Button Content="Transpose"
                                IsEnabled="{Binding AreButtonsEnabled}"

                                Height="24"
                                Width="80"
                                Margin="3" />

                        <CheckBox Content="Access full shop lineup"
                                  IsChecked="{Binding IsFullLineUpEnabled}"
                                  Height="24"
                                  Width="160"
                                  Margin="3" />
                    </WrapPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>