<UserControl x:Class="SekiroTool.Views.Tabs.EnemyTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SekiroTool.Views.Tabs"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Border Grid.Column="0"
                    BorderThickness="1"
                    BorderBrush="#333"
                    CornerRadius="3"
                    Margin="0,0,5,0">
                <StackPanel Margin="10">
                    <TextBlock Text=""
                               FontWeight="Bold"
                               Margin="0,0,0,10" />

                    <WrapPanel HorizontalAlignment="Center">
                        <Button Content="Skip Dragon Phase 1"
                                IsEnabled="{Binding AreOptionsEnabled}"
                                Command="{Binding SkipDragonPhaseOneCommand}"
                                Height="24"
                                Margin="3" />
                    </WrapPanel>
                    
                    <CheckBox Content="Butterfly No Summons"
                              IsChecked="{Binding IsNoButterflySummonsEnabled}"
                              Margin="0,2" />
                    
                </StackPanel>
            </Border>
    </Grid>
</UserControl>
